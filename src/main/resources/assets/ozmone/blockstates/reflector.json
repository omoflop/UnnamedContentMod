{
  "multipart": [
    {
      "when": { "face": "floor" },
      "apply": {
        "model": "ozmone:block/reflector_base",
        "uvlock": true
      }
    },
    {
      "when": { "face": "ceiling" },
      "apply": {
        "model": "ozmone:block/reflector_base",
        "uvlock": true,
        "x": 180
      }
    },
    {
      "when": { "face": "wall", "facing": "north" },
      "apply": {
        "model": "ozmone:block/reflector_base",
        "uvlock": true,
        "x": 90
      }
    },
    {
      "when": { "face": "wall", "facing": "east" },
      "apply": {
        "model": "ozmone:block/reflector_base",
        "uvlock": true,
        "x": 90,
        "y": 90
      }
    },
    {
      "when": { "face": "wall", "facing": "south" },
      "apply": {
        "model": "ozmone:block/reflector_base",
        "uvlock": true,
        "x": 270
      }
    },
    {
      "when": { "face": "wall", "facing": "west" },
      "apply": {
        "model": "ozmone:block/reflector_base",
        "uvlock": true,
        "x": 270,
        "y": 90
      }
    }
  ]
}

